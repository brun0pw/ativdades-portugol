programa {
  funcao inicio() {
    cadeia frutas
    inteiro valor, desconto, kilograma, valor_total

    escreva("qual é a fruta que você escolheu? ")
    leia(frutas)
    escreva("quantos kilos você quer de " + frutas + " ? ")
    leia(kilograma)
    se(frutas == "morango"){
    valor = 2.5
     se(kilograma >= 5) 
     valor = 2.2
    senao se( kilograma <= 5 )
    valor = 2.5
    }

     se(frutas == "maçã"){
    valor = 1.8
     se(kilograma >= 5) 
     valor = 1.5
    senao se( kilograma <= 5 )
    valor = 1.8
    }
    escreva("o preço por kilo ficou de: " + valor)
   


   valor_total = valor * kilograma 
   escreva(valor_total)
  }
}
